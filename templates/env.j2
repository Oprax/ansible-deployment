APP_NAME={{ domain }}
APP_ENV=production
APP_KEY={{ app_key.stdout }}
APP_DEBUG=false
APP_URL=http://{{ domain }}

LOG_CHANNEL=stack

DB_CONNECTION={{ database.driver }}
DB_DATABASE={{ database.name }}
DB_USERNAME={{ database.user }}
DB_PASSWORD={{ database.pswd }}

BROADCAST_DRIVER=log
CACHE_DRIVER=file
SESSION_DRIVER=file
SESSION_LIFETIME=120
QUEUE_DRIVER=sync

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_DRIVER=smtp
MAIL_HOST={{ email.host }}
MAIL_PORT={{ email.port }}
MAIL_USERNAME={{ email.user }}
MAIL_PASSWORD={{ email.pswd }}
MAIL_ENCRYPTION={{ email.encr }}

{% for key, val in dot_env_extra.items() %}
{{ key | upper }}={{ val }}
{% endfor %}
